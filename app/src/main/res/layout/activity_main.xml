        <TextView
            android:id="@+id/txtAssigingO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="38sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgScoreO"/>

        <TextView
            android:id="@+id/RealScoreO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 "
            android:textSize="40sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/txtAssigingO"/>



    </RelativeLayout>




