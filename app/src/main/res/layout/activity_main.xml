    <RelativeLayout
        android:id="@+id/RlScoreX"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/score_X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score "
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/imgScoreX"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/letter_x"
            android:layout_toEndOf="@id/score_X"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txtAssigingX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="38sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgScoreX"/>

        <TextView
            android:id="@+id/RealScoreX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 "
            android:textSize="40sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/txtAssigingX"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/RlScoreX"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/score_O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score "
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textAlignment="center"/>

        <ImageView
